@model Invoicing.Entities.Customer

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="form-group row">
    <div class="col-sm-2"><label>Name:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>Address 1:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="Address1"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.Address1" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>Address 2:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="Address2"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.Address2" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>City:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="City"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.City" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>Province/State:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="ProvinceOrState"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.ProvinceOrState" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>Zip/postal code:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="ZipOrPostalCode"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.ZipOrPostalCode" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>Phone:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="Phone"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>Contact first name:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="ContactFirstName"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.ContactFirstName" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>Contact last name:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="ContactLastName"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.ContactLastName" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2"><label>Contact email:</label></div>
    <div class="col-sm-4">
        <input type="text" asp-for="ContactEmail"
               class="form-control" />
    </div>
    <div class="col-sm-6">
        <span asp-validation-for="@Model.ContactEmail" class="text-danger"></span>
    </div>

    @* This hidden field helps EF Core recognize the entity during edit operations. *@
    <input type="hidden" asp-for="CustomerId" />
</div>

