@{
    ViewData["Title"] = "Add a customer";
}

@* Using partial view need to add <partial name="_ValidationScriptsPartial" /> here for real-time validation to work *@
@section scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h1>Add a customer</h1>

<form asp-controller="Customer" asp-action="Add" method="post" enctype="application/x-www-form-urlencoded">
    <partial name="_CustomerDetailPartial" />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
        <a asp-controller="Customer" asp-action="Index" class="btn btn-primary">Cancel</a>
    </div>
</form>