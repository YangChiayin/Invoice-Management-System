@model Invoicing.Entities.Customer

@{
    ViewData["Title"] = "Delete a customer";
}

<h1>@Model.Name (@Model.CustomerId)</h1>
<h4>Are you sure that you want to delete this customer?</h4>

<form asp-controller="Customer" asp-action="Delete" method="post" enctype="application/x-www-form-urlencoded">
    <!-- Add a hidden form field that contains the customer's ID:' -->
    <input type="hidden" asp-for="CustomerId" />

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Customer" asp-action="Index" class="btn btn-primary">Cancel</a>
    </div>
</form>
